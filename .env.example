# Mem0 API Configuration
# ========================
# Required: Mem0 API server endpoint
MEM0_API_URL=http://localhost:8000

# Optional: API authentication key (if your Mem0 server requires authentication)
# MEM0_API_KEY=your_api_key_here

# Optional: Organization and project identifiers
# MEM0_ORG_ID=your_organization_id
# MEM0_PROJECT_ID=your_project_id

# MCP Server Configuration
# ========================
# Server listening address (default: 127.0.0.1)
# Use 0.0.0.0 to allow external connections
MCP_HOST=127.0.0.1

# Server listening port (default: 8081)
MCP_PORT=8081

# Session timeout in seconds (default: 3600)
MCP_SESSION_TIMEOUT=3600

# CORS allowed origins (default: *)
# Use comma-separated values for multiple origins
# Example: http://localhost:3000,http://example.com
MCP_CORS_ORIGINS=*

# Development mode - enables verbose logging (default: false)
MCP_DEV_MODE=false

# Default user ID for sessions without explicit user context
# This will be used when no user_id is provided in the path or headers
# Example: MCP_DEFAULT_USER_ID=default_user
# MCP_DEFAULT_USER_ID=

# Advanced Mem0 Configuration
# ===========================
# Request timeout in milliseconds (default: 30000)
MEM0_TIMEOUT=30000

# Maximum number of retry attempts (default: 3)
MEM0_MAX_RETRIES=3

# Logging Configuration
# =====================
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Log format: json, text (default: json)
LOG_FORMAT=json